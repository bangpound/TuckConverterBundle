<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tuck_converter.config_format_converter.class">Tuck\ConverterBundle\ConfigFormatConverter</parameter>
        <parameter key="tuck_converter.dumper.factory.class">Tuck\ConverterBundle\Dumper\DumperFactory</parameter>
        <parameter key="tuck_converter.loader.factory.class">Tuck\ConverterBundle\Loader\LoaderFactory</parameter>
        <parameter key="tuck_converter.file.temp_file_factory.class">Tuck\ConverterBundle\File\TempFileFactory</parameter>
    </parameters>

    <services>
        <service id="tuck_converter.config_format_converter" class="%tuck_converter.config_format_converter.class%">
            <argument type="service" id="tuck_converter.loader.factory" />
            <argument type="service" id="tuck_converter.dumper.factory" />
        </service>

        <service id="tuck_converter.dumper.factory" class="%tuck_converter.dumper.factory.class%">
        </service>

        <service id="tuck_converter.loader.factory" class="%tuck_converter.loader.factory.class%">
        </service>

        <service id="tuck_converter.loader.factory" class="%tuck_converter.file.temp_file_factory.class%">
        </service>

    </services>

</container>
